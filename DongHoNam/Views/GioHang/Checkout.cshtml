@model DongHoNam.Models.DONHANG
<div class="row"><div class="container panel-primary col-md-8" style="margin-left:15%">
    <div class="text-center panel-heading"><h4>Thông tin đặt hàng</h4></div>
    <div class="row panel-body" style="margin-top:0 !important;padding-top:0 !important">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Họ tên", new { @class = "control-label col-md-4 text-left" })
                    <div class="col-md-8">
                        <b><input type="text" value="@ViewBag.KhachHang.HOTEN" class="form-control" readonly="readonly" /></b>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Email", new { @class = "control-label col-md-4 text-left" })
                    <div class="col-md-8">
                        <b><input type="text" value="@ViewBag.KhachHang.EMAIL" readonly="readonly" class="form-control" /></b>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Sô điện thoại", new { @class = "control-label col-md-4 text-left" })
                    <div class="col-md-8">
                        <b><input type="text" value="@ViewBag.KhachHang.SDT" readonly="readonly" class="form-control" /></b>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ngày đặt hàng", new { @class = "control-label col-md-4 text-left" })
                    <div class="col-md-8">
                        <input type="text" value="@DateTime.Now" readonly="readonly" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Địa chỉ ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(x => x.DIACHINHAN, new { @class = "form-control", @placeholder = "Nhập địa chỉ" })
                        @Html.ValidationMessageFor(x=>x.DIACHINHAN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Ghi chú (nếu có) ", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(x => x.GHICHU, new { @class = "form-control" })

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-4 text-right">
                        @Html.ActionLink("Quay lại", "Index", "SanPham", new { @class = "btn btn-info" })
                    </div>
                    <div class="col-md-8">
                        <input type="submit" value="Đặt hàng" class="btn btn-black"/>
                    </div>

                </div>
            </div>
        }


    </div>
</div>
</div>
   





<div class="row">

    <div class="container panel-primary">
        <div class="text-left panel-heading"><h4>Thông tin chi tiết đơn hàng</h4></div>
        <div class="panel-body">
            <table class="table table-bordered">
                <tr style="color:white;background-color:#4b4a4a">
                    <th>Tên sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                @foreach (var item in (List<DongHoNam.Models.GioHangITEM>)ViewBag.GioHang.Items)
            {
                    <tr>
                        <td>@item.SANPHAM.TENSP</td>
                        <td><img src="~/image-sanpham/@item.SANPHAM.HINH" style="width:50px;height:50px" /></td>
                        <td>@item.SoLuong</td>
                        <td>@item.SANPHAM.GIA.ToString("#,##0")</td>
                        <td>@item.TongTien.ToString("#,##0") VNĐ</td>
                    </tr>

            }
            </table>
            <div class="text-right">Tổng trị giá đơn hàng: <b> @ViewBag.GioHang.Tongtien_GH.ToString("# ### ##0") VNĐ</b></div>
            
            

    </div>
</div>

</div>







@model DongHoNam.Models.GioHang

@{
    ViewBag.Title = "ViewCart";
}
@if (Model.Items.Count > 0)
{
    <div class="container panel-primary" style="margin-top:5px">
        <div class="text-center panel-heading"><h3>Giỏ hàng của bạn </h3></div>
        <div class="row panel-body">
            @using (Html.BeginForm("UpdateCart", "GioHang"))
            {
                <table class="table table-bordered">
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.SANPHAM.TENSP</td>
                            <td>@item.SANPHAM.GIA</td>
                            <td>
                                @Html.Hidden("ID_Sanpham", item.SANPHAM.MASP)
                                @Html.TextBox("SoLuong", item.SoLuong)
                            </td>
                            <td>@item.TongTien.ToString("#,##0") VNĐ</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4" class="alert alert-info text-right">
                            <label>Tổng giá trị giỏ hàng:</label> @Model.Tongtien_GH.ToString("#,##0") VNĐ
                        </td>
                    </tr>

                </table>
                <div class="text-right">
                    <input type="submit" value="Update" class="btn btn-black" />
                    @Html.ActionLink("Đặt hàng", "Checkout", null, new { @class = "btn btn-success" })
                    @Html.ActionLink("Mua sắm tiếp", "Index", "SanPham", null, new { @class = "btn btn-success" })

                </div>
            }
            </div>
        </div>
}

else
{
<div class="alert alert-danger">
    <b> Giỏ hàng của bạn chưa có sản phẩm</b>
</div>
}




                   


   


@model IEnumerable<DongHoNam.Models.THUONGHIEU>
@{
    ViewBag.Title = "Index";
}

<div class="container panel-primary" style="margin-top:5px">
    <div class="text-center panel-heading"><h3>Danh sách các thương hiệu </h3></div>
    <div class="row panel-body">
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="margin-top:50px;height:300px">
                
                <div style="height:150px">
               
                    <a href="@Url.Action("Detail","ThuongHieu",new { ID_ThuongHieu=item.MATH})">
                        <img src="~/image-Thuonghieu/@item.LOGO" width="150px"/>
                    </a>
                </div><br />
                
                 <div ><b>Năm thành lập: </b>@item.NAMTL</div>
                <div><b>Quốc gia: </b>@item.QUOCGIA</div>   
                <a class="btn btn-black" href="@Url.Action("Index","SanPham",new { ID_ThuongHieu=item.MATH})">Các sản phẩm</a>        
                    
                </div>






           
        }
    </div>
</div>


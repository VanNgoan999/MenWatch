@model DongHoNam.Models.LOAI

    @{
        ViewBag.Title = "Index";        
    }
<script src="~/Scripts/backend/LoaiDongHo.js"></script>
<div class="panel-default">
        <div class="panel-heading">
            <h4>Quản lý danh mục loại sản phẩm</h4>
        </div>
        <div class="panel-body">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#loaiModal" onclick="clearTextBox();">Thêm mới chủng loại</button><br /><br />
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="black">
                        <th>
                            Mã loại
                        </th>
                        <th>
                            Tên loại
                        </th>
                        <th>
                            
                        </th>
                    </tr>
                </thead>
                <tbody class="tbody"></tbody>
            </table>
            <div class="modal fade" id="loaiModal" tabindex="-1" role="dialog" aria-labelledby="ModalLable" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!---->
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h3 class="modal-title" id="ModalLable">Thêm/Sửa Loại đồng hồ</h3>
                        </div>
                        <!---->
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="MALOAI">Mã loại</label>
                                    <input type="text" class="form-control" id="txtMaLoai" disabled="disabled"/>
                                </div>
                            
                                <div class="form-group">
                                    <label for="TENLOAI">Tên loại</label>
                                    <input type="text" class="form-control" id="txtTenLoai" placeholder="Tên loại" />
                                </div>
                            </form>
                        </div>
                        <!---->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="btnThem" onclick="Add()">Thêm</button>
                            <button type="button" class="btn btn-primary" style="display:none" id="btnSua" onclick="Update()">Sửa</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>

            </div>
</div>
</div>